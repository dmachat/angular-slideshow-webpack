{
  "options": {
    "files": [
      "package.json",
      "bower.json"
    ],
    "updateConfigs": [],
    "commit": true,
    "commitMessage": "Release v%VERSION%",
    "commitFiles": [
      "README.md",
      "CHANGELOG.md",
      "package.json",
      "bower.json",
      "<%= config.dist %>/<%= config.module %>.js",
      "<%= config.dist %>/<%= config.module %>.min.js"
    ],
    "createTag": true,
    "tagName": "v%VERSION%",
    "tagMessage": "Version %VERSION%",
    "push": true,
    "pushTo": "origin",
    "gitDescribeOptions": "--tags --always --abbrev=1 --dirty=-d"
  }
}
